{{#zone "topCss"}}
    <link rel="stylesheet" href="{{unit.publicUri}}/less/login-input.css">
{{/zone}}

<form class="{{unit.class}}">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="User Name" required autofocus>
    </div>
    <div class="form-group">
        <input type="password" class="form-control" placeholder="Password" required>
    </div>
    <div class="form-group">
        <a class="btn btn-primary btn-block" href="{{this.app.uri}}/apps">Sign in</a>
    </div>
    <div class="form-group">
        <label class="pull-left">
            <input type="checkbox" value="remember-me"> Remember me
        </label>
        <a href="#" class="pull-right create-account">Create an account</a>
    </div>
</form>
